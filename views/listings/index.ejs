
<% layout("/layouts/boilerplate") -%> 
<body>
    <h3>ALL LISTINGS</h3>
    <!-- <form action="/listings/new" method="GET">
      <button>Create new Listings</button>
    </form> -->
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1" >
  <%for(let listings of allListings){ %>
    <a href="/listings/<%=listings._id%>" class="listing-link">
      <div class="card card-listing" >
        <img src="<%=listings.image%>" class="card-img-top" alt="listing_image">
        <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text"><%=listings.title%> <br>
              <% if (listings.price) { %>
              &#8377;<%= listings.price.toLocaleString("en-IN") %> / night
              <% } else { %>
                Price not available
              <% } %>   
            </p>
         </div>
      </div>
    </a>
  <% } %>  
</div>
</body>


