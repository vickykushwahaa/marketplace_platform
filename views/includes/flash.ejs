<% if(success && success.length > 0){ %>
    <div class="alert alert-success alert-dismissible fade show cols-6 offset-3 " style="margin-right: 25%;" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<% if(error && error.length > 0){ %>
    <div class="alert alert-danger alert-dismissible fade show cols-6 offset-3 " style="margin-right: 25%;" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>